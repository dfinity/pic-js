{
  "name": "pic-js",
  "private": true,
  "engines": {
    "node": "^24",
    "pnpm": "^10",
    "npm": "please use pnpm"
  },
  "type": "module",
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "workspaces": [
    "examples/clock/tests",
    "examples/counter/tests",
    "examples/google_search/tests",
    "examples/icp_features/tests",
    "examples/multicanister/tests",
    "examples/nns_proxy/tests",
    "examples/todo/tests",
    "packages/pic",
    "packages/pic-server",
    "docs"
  ],
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "run-p build:pic",
    "build:pic": "tsc -p ./packages/pic/tsconfig.json",
    "test:pic": "jest -c ./packages/pic/jest.config.ts",
    "build:test-canister": "icp build test_canister && cp .icp/cache/artifacts/test_canister packages/pic/tests/test-canister/test_canister.wasm.gz && pnpm run generate:test-canister",
    "generate:test-canister": "icp-bindgen --did-file packages/pic/tests/test-canister/test_canister.did --out-dir packages/pic/tests/test-canister --actor-disabled --force",
    "build:examples": "icp build && pnpm run generate:bindings",
    "generate:bindings": "run-p generate:clock generate:counter generate:google-search generate:icp-features generate:multicanister generate:nns-proxy generate:todo",
    "generate:clock": "icp-bindgen --did-file examples/clock/clock.did --out-dir examples/clock --actor-disabled --force",
    "generate:counter": "icp-bindgen --did-file examples/counter/counter.did --out-dir examples/counter --actor-disabled --force",
    "generate:google-search": "icp-bindgen --did-file examples/google_search/google_search.did --out-dir examples/google_search --actor-disabled --force",
    "generate:icp-features": "icp-bindgen --did-file examples/icp_features/icp_features.did --out-dir examples/icp_features --actor-disabled --force",
    "generate:multicanister": "icp-bindgen --did-file examples/multicanister/multicanister.did --out-dir examples/multicanister --actor-disabled --force",
    "generate:nns-proxy": "icp-bindgen --did-file examples/nns_proxy/nns_proxy.did --out-dir examples/nns_proxy --actor-disabled --force",
    "generate:todo": "icp-bindgen --did-file examples/todo/todo.did --out-dir examples/todo --actor-disabled --force",
    "test:examples": "run-p test:clock test:counter test:google-search test:icp-features test:multicanister test:nns-proxy test:todo",
    "build:clock": "icp build clock && pnpm run generate:clock",
    "test:clock": "jest -c ./examples/clock/tests/jest.config.ts",
    "build:counter": "icp build counter && pnpm run generate:counter",
    "test:counter": "vitest run -c ./examples/counter/tests/vitest.config.ts",
    "build:google-search": "icp build google_search && pnpm run generate:google-search",
    "test:google-search": "jest -c ./examples/google_search/tests/jest.config.ts",
    "build:icp-features": "icp build icp_features && pnpm run generate:icp-features",
    "test:icp-features": "jest -c ./examples/icp_features/tests/jest.config.ts",
    "build:multicanister": "icp build phonebook superheroes multicanister && pnpm run generate:multicanister",
    "test:multicanister": "jest -c ./examples/multicanister/tests/jest.config.ts",
    "build:nns-proxy": "icp build nns_proxy && pnpm run generate:nns-proxy",
    "test:nns-proxy": "jest -c ./examples/nns_proxy/tests/jest.config.ts",
    "build:todo": "icp build todo && pnpm run generate:todo",
    "test:todo": "jest -c ./examples/todo/tests/jest.config.ts",
    "postinstall": "tar -xvf examples/nns_proxy/tests/state/nns_state.tar.xz -C examples/nns_proxy/tests/state"
  },
  "devDependencies": {
    "@icp-sdk/bindgen": "^0.2.1",
    "@icp-sdk/core": "^5.0.0",
    "@swc/core": "^1.15.3",
    "@swc/jest": "^0.2.39",
    "@tsconfig/node24": "^24.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "bip39": "^3.1.0",
    "jest": "^30.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vitest": "^4.0.15"
  },
  "overrides": {
    "path-to-regexp@<0.1.12": ">=0.1.12",
    "path-to-regexp@>=2.0.0 <3.3.0": ">=3.3.0",
    "esbuild@<=0.24.2": ">=0.25.0"
  }
}
