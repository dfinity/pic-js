{
  "name": "docs",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "rm -rf ./dist/${DOCS_VERSION:-local}/ && mkdir -p ./dist/${DOCS_VERSION:-local}/",
    "build": "typedoc --options ./typedoc.json",
    "postbuild": "cp -r ./src/content/docs/* ./dist/${DOCS_VERSION:-local}/"
  },
  "devDependencies": {
    "@dfinity/typedoc-plugin-icp-docs": "^0.0.3",
    "typedoc": "^0.28.12",
    "typedoc-plugin-frontmatter": "^1.3.0",
    "typedoc-plugin-markdown": "^4.8.1"
  }
}
